{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "allowJs": false,

    /* React + JSX Support */
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "allowSyntheticDefaultImports": true
  },

  "include": [
    "Core/**/*",
    "v5/**/*",
    "scripts/**/*"
  ],

  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",

    /* Skip UI folders for now so CI passes cleanly */
    "v5/wyneos/ui",
    "web"
  ]
}
